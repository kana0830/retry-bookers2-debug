<table>
  <% comments.each do |book_comment| %>
    <tr id="comment-<%= book_comment.id %>">
      <td>
        <%= link_to (book_comment.user) do %>
          <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td>
        <%= book_comment.comment %>
        <% if book_comment.user_id == current_user.id %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true, class: "btn-sm btn-danger" %><br><br>
        <% end %>
      </td>
		</tr>
  <% end %>
</table>